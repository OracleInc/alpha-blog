<h1 align="center">All content creators</h1>
<div align="center">
<%= will_paginate %>
</div>
<div align="center">
<% @users.each do |u|%>

<ul class="listing">
  <div class="row">
    <div class="well col-md-4 col-md-offset-4">
    <li><%= link_to gravatar_for(u), user_path(u)%></li>
    <li class="article-title">
      <%= link_to u.username, user_path(u)%>
    </li>
      <li><small><%= pluralize(u.articles.count, "article") if u.articles%></small></li>
      <% if logged_in? && current_user.admin? %>
        <li><%= link_to "Delete User", user_path(u), method: :delete, data: {confirm: "Are you sure you want to delete the user and all their articles?"}%>
      <% end %>
    </div>
  </div>
</ul>


  <% end %>

  </div>
  <div align="center">
<%= will_paginate %>
</div>